	$(document).ready(function(){
		$('#keyword').keyup(function(event){
		       if(event.keyCode == 13){
			       var keyword = $('#keyword').val();
		    	   window.location.href = "results.html?keyword="+keyword;
		       }
		});
	});		
</script>

